{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "install": {
          "cmd": ["npm ci --no-audit --no-fund"]
        },
        "build": {
          "cmd": ["echo 'Build completed'"]
        }
      }
    },
    "cache": {
      "paths": ["node_modules"]
    }
  },
  "deploy": {
    "cmd": ["npm start"],
    "healthcheck": "/health",
    "sleepApplication": false
  },
  "env": {
    "NODE_ENV": { "value": "production", "type": "string" },
    "PORT": { "value": "8080", "type": "string" }
  },
  "variables": {
  }
}